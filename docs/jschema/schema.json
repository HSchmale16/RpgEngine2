{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "requirementGroupItem": {
            "type": "object",
            "properties": {
                "requirementType": {
                    "type": "string",
                    "enum": [
                        "item",
                        "attribute"
                    ]
                },
                "name": {
                    "type": "string"
                },
                "min": {
                    "type": "integer",
                    "minimum": 0
                },
                "max": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": [
                "requirementType",
                "name"
            ]
        },
        "requirementGroup": {
            "type": "array"
        },
        "requirements": {
            "type": "array"
        }
    }
}